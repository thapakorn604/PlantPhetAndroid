<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.msiraider.newproject.Price.PriceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="แนวโน้มราคาสินค้า"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="30sp"
                android:fontFamily="@font/sriracharegular"/>
        </Toolbar>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:background="#8fffffff"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/content1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="มันสำปะหลัง"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:fontFamily="@font/athitiregular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.60"
                    android:textColor="#000000"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:fontFamily="@font/athitiregular"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="20sp"
                android:id="@+id/subcontent1"
                android:layout_below="@id/content1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="หน่วย บาท/กก."
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:fontFamily="@font/athitiregular"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/buttonlist1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:background="#8fffffff"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/content2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ข้าวเหนียว"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/athitiregular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9,137.00"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:fontFamily="@font/athitiregular"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="20sp"
                android:id="@+id/subcontent2"
                android:layout_below="@id/content2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="หน่วย บาท/ตัน"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:fontFamily="@font/athitiregular"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/buttonlist2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:background="#8fffffff"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/content3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ข้าวหอมมะลิ"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:fontFamily="@font/athitiregular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8,096.00"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:fontFamily="@font/athitiregular"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="20sp"
                android:id="@+id/subcontent3"
                android:layout_below="@id/content3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="หน่วย บาท/ตัน"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:fontFamily="@font/athitiregular"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/buttonlist3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:background="#8fffffff"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/content4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ข้าวโพด"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:fontFamily="@font/athitiregular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.04"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:fontFamily="@font/athitiregular"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="20sp"
                android:id="@+id/subcontent4"
                android:layout_below="@id/content4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="หน่วย บาท/กก."
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:fontFamily="@font/athitiregular"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>
