<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.msiraider.newproject.Price.ViewHistory.RecordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="บันทึกราคาผลผลิต"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="30sp"
                android:fontFamily="@font/sriracharegular"/>
        </Toolbar>

        <Button
            android:id="@+id/record_cassava"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="#8fffffff"
            android:text="มันสำปะหลัง"
            android:textColor="#000000"
            android:textSize="25sp"
            android:fontFamily="@font/athitiregular"
            />

        <Button
            android:id="@+id/record_sticky"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="#8fffffff"
            android:text="ข้าวเหนียว"
            android:textColor="#000000"
            android:textSize="25sp"
            android:fontFamily="@font/athitiregular"
            />

        <Button
            android:id="@+id/record_jusmine"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="#8fffffff"
            android:text="ข้าวหอมมะลิ"
            android:textColor="#000000"
            android:textSize="25sp"
            android:fontFamily="@font/athitiregular"
            />

        <Button
            android:id="@+id/record_corn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="#8fffffff"
            android:text="ข้าวโพด"
            android:textColor="#000000"
            android:textSize="25sp"
            android:fontFamily="@font/athitiregular"
            />

    </LinearLayout>

</ScrollView>
