<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <TextView
        android:id="@+id/sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ซื้อขายผลผลิตทางการเกษตร"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:fontFamily="@font/athitiregular"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_account_circle_black_24dp"
            android:layout_margin="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">



        <TextView
            android:id="@+id/farmerdemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="สวนลุงแซม"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/athitiregular"
            />
        <TextView
            android:id="@+id/whatsell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/athitiregular"
            android:text="ขาย : มันสำปะหลัง"
            android:textSize="18dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_price"
                android:text="1.60"
                android:fontFamily="@font/athitiregular"
                android:textSize="30dp"
                android:textColor="#228b22"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/contactlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ช่องทางการติดต่อ"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"

        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/athitiregular"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/phonelbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เบอร์โทรศัพท์"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingLeft="50dp"
                android:fontFamily="@font/athitiregular"
                />
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="086-555-3333"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/athitiregular"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/emaillbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="อีเมล"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingLeft="50dp"
                android:fontFamily="@font/athitiregular"
                />
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sammycnx@gmail.com"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/athitiregular"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addresslbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ที่อยู่"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:paddingLeft="50dp"
                android:fontFamily="@font/athitiregular"
                />
            <TextView
                android:id="@+id/addressfarmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99/1-2 ตำบลสุเทพ อำเภอเมือง เชียงใหม่"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/athitiregular"
                />


        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/mapbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ดูข้อมูลเชิงตำแหน่ง"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

</LinearLayout>