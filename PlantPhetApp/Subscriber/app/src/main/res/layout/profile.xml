<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="โปรไฟล์"
            android:fontFamily="@font/athitiregular"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:layout_margin="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ข้อมูลส่วนตัว"
            android:fontFamily="@font/athitiregular"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/athitiregular"
            android:text="ชื่อ : วิลเฟร็ด"
            android:textStyle="bold"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/athitiregular"
            android:text="นามสกุล : โบนี"
            android:textStyle="bold"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/athitiregular"
            android:text="เพศ : ชาย"
            android:textStyle="bold"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/athitiregular"
            android:text="อีเมล : wilfred.bony@gmail.com"
            android:textStyle="bold"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/athitiregular"
            android:text="เบอร์โทรศัพท์ : 0891902773"
            android:textStyle="bold"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/athitiregular"
            android:text="การศึกษา : ปริญญาโท"
            android:textStyle="bold"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/athitiregular"
            android:text="ที่อยู่ : 99/1-2 หมู่ 14 ซอยบ้านใหม่หลังมอ ตำบลสุเทพ อำเภอเมือง จังหวัดเชียงใหม่ 50200"
            android:textStyle="bold"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/athitiregular"
            android:text="ชื่อบริษัท : ศรีสยามโลจิสติกส์"
            android:textStyle="bold"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/athitiregular"
            android:text="รูปแบบธุรกิจ : ส่งออกผลผลิตทางการเกษตร"
            android:textStyle="bold"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/athitiregular"
            android:text="พื้นที่เป้าหมาย : ภาคเหนือ"
            android:textStyle="bold"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/athitiregular"
            android:text="สินค้าที่สนใจ : ข้าวเจ้า, ข้าวเหนียว"
            android:textStyle="bold"
            android:layout_marginLeft="20sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="แก้ไขข้อมูลส่วนตัว"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ออกจากระบบ"
            android:layout_margin="20sp"
            android:id="@+id/btnSignout"/>

    </LinearLayout>

</ScrollView>